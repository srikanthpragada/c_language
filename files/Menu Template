#include <stdio.h>

void option1()
{
  printf("\nOption1 Completed Successfully!\n");
}

void option2()
{

  printf("\nOption1 Completed Successfully!\n");
}

main()
{
 int opt;

   while(1)
   {
      printf("\nMenu\n");
      printf("\n1. Option1");
      printf("\n2. Option2");
      printf("\n3. Exit");

      printf("\n\nEnter your choice [1-3] :");
      scanf("%d", &opt);

      switch(opt)
      {
          case 1 : option1(); break;
          case 2 : option2(); break;
          case 3 : exit(0);
          default: printf("Sorry! Invalid Option. Try again!\n");
      }
   }

}
